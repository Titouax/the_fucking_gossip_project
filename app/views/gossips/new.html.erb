<h1>New Gossip</h1>

<%= form_with scope: :gossip, url: gossips_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :content %><br>
    <%= form.text_area :content %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Sauvegarder le Gossip</button>
  </div>

<% end %>
